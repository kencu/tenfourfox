 endif
 endif # MOZ_BUILD_PROJECTS
 
-MOZ_MAKE = $(MAKE) -j2 -s -C $(OBJDIR)
+MOZ_MAKE = $(MAKE) -j2 -C $(OBJDIR)

and finally:

./104fx_copy.sh TenFourFox.app
